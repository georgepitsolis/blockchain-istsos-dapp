<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <!-- <meta http-equiv="refresh" content="5"> -->
    <title><%= title %></title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"> 
</head>

<body>

    <div class="container py-4">
        <header class="pb-3 pe-3 mb-4 border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <a href="/" class="text-dark text-decoration-none">
                    <span class="fs-4">Dapp for istSOS</span>                 
                </a>
                <a class="text-dark" href="/">
                    <i class="bi bi-house-door-fill"></i>    
                </a>
            </div>        
        </header>

        <div class="row align-items-md-stretch">
            <div class="col-md-6">

                <div class="col align-items-md-stretch">

                    <div class="p-5 mb-4 text-white bg-dark rounded-3">
                        <h5>Connect to istSOS database</h5>
                        <div class="input-group input-group-sm mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-default">Ip</span>
                            <input type="text" id="input-ip" value="<%= process.env.ISTSOS_IP %>" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" disabled>
                        </div>
                        <div class="input-group input-group-sm mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-default">Db</span>
                            <input type="text" id="input-db" value="<%= process.env.ISTSOS_DB %>" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" disabled>
                        </div>
                    </div>

                    <div class="p-5 mb-4 text-white bg-dark rounded-3">
                        <div class="table-responsive-sm">
                            <table class="table table-sm table-dark table-hover" id="table-base">
                                <thead>
                                    <tr>
                                        <th>Station name</th>
                                        <th>File name</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="table-body">
                                    <tr></tr>
                                </tbody>
                            </table> 
                        </div>
                        <button class="btn mt-4 btn-light" type="button" id="btn-select-files">Select files</button>
                        <input type="file" id="selected-files" name="myFiles" accept=".txt" style="display: none;" multiple>
                        <button class="btn mt-4 btn-success" type="button" id="btn-submit" disabled="disabled">Submit</button>
                    </div>

                </div>

            </div>

            <div class="col-md-6">
                <div class="h-100 p-5 bg-light rounded-3">
                    <h2 class="mb-4">Console Output</h2>
                    <div id="output-console"></div> 
                    <!-- style="height: 400px; overflow-y: scroll; padding-right: 5px;" -->
                </div>                
            </div>
        </div>
    
        <footer class="pt-3 mt-4 text-muted border-top">
            Copyright &copy; 2022 Giorgos Pitsolis ECE NTUA
        </footer>

    </div>

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    
    <script>

        $(document).ready(function() {
            
            var allFilesObj = [];

            // Remove a row from table
            $('#table-body').on('click', '.remove', function () {
                const fileDel = $(this).closest('tr');
                const curFile = fileDel.get(0).children[1].innerHTML;
                allFilesObj.splice(search(curFile, allFilesObj), 1);
                fileDel.remove();
                changeSubmit();
                // print(allFilesObj);
            });

            // Select files
            $("#btn-select-files").on('click', function() {
                $('#selected-files').trigger('click');
            });

            $("#selected-files").change(function() {
                for (var i = 0; i < $(this).get(0).files.length; i++) {
                    var curFile = $(this).get(0).files[i];
                    var fileName = curFile.name;
                    if (search(fileName, allFilesObj) === -1){
                        allFilesObj.push(curFile);
                        
                        // Adding a row inside the tbody.
                        $('#table-body').append(
                            `<tr>
                            <td>${(curFile.name).split('.')[0].toUpperCase()}</td>
                            <td id="selected-file">${curFile.name}</td>
                            <td>
                                <button style="all: unset; cursor: pointer;" type="button" class="btn remove"><i class="bi bi-trash"></i></button>
                            </td>
                            </tr>`);
                    }
                }
                // print(allFilesObj);
                changeSubmit();
                this.value = null;
            });  

            $("#btn-submit").on('click', async function() {
                for (let x = 0; x < allFilesObj.length; x++){
                    let form_data = new FormData();
                    form_data.append('myFiles', allFilesObj[x]);
                    await $.ajax({
                        'url':'/add/upload/files',
                        'type':'POST',
                        'data': form_data,
                        'success': function(res) {
                            if(res.result && res.result[0] != 'error') {
                                station = res.result[0];
                                msg = '';
                                for (var i=1; i<res.result.length; i++) {
                                    msg += res.result[i] + '<br>';
                                }
                                $("#output-console").prepend(
                                    `<div class="mb-5 card text-white bg-success bg-opacity-40 rounded-3">
                                        <h5 class="p-3 card-header">${station}</h5>
                                        <div class="card-body">
                                            <p class="card-text">${msg}</p>
                                        </div>
                                    </div>`);
                            }else {
                                station = res.result[1].split('/').pop().split('.')[0].toUpperCase();
                                msg = 'An error was occured.<br>This file did not added to istSOS.'
                                $("#output-console").prepend(
                                    `<div class="mb-5 card text-white bg-danger bg-opacity-40 rounded-3">
                                        <h5 class="p-3 card-header">${station}</h5>
                                        <div class="card-body">
                                            <p class="card-text">${msg}</p>
                                        </div>
                                    </div>`);
                            }
                        },
                        'contentType': false,
                        'processData': false
                    }).catch(e=>console.log(e));
                }

                allFilesObj = [];
                changeSubmit();
                $('#table-body').empty();
                $('#table-body').append(`<tr></tr>`);  
                
            });

            function search(name, myArray){
                for (var i=0; i < myArray.length; i++) {
                    if (myArray[i].name === name) {
                        return i;
                    }
                }
                return -1;
            };

            function changeSubmit() {
                if (allFilesObj.length != 0) {
                    $("#btn-submit").removeAttr('disabled');
                }else {
                    $("#btn-submit").attr('disabled', true);
                };
            };

            function print(value = "Im here!!") {
                console.log(value);
            };
            
        });

    </script>
</body>

</html>